generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Position {
  playa
  shop
}

model Schedule {
  id        String   @id @default(uuid())
  day       String
  morning   String[]
  afternoon String[]
  night     String[]
  dayOff    String[]
  position  Position @default(playa) // Agregar la columna 'position' con valor predeterminado
}

model Employee {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  email       String   @unique
  phoneNumber String
  position    String
}

model LastShift {
  id    Int @id @default(1) // Un solo registro con ID estático
  index Int @default(0)     // Índice de rotación
}
